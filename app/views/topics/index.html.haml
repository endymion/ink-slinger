%h1= t('.title')
%p= link_to t('.new_topic'), new_topic_path

%table
  %thead
    %tr
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for topic in @topics
      %tr{ :class => cycle(:odd, :even) }
        %td.action= link_to t('show'), topic
        %td.action= link_to t('edit'), edit_topic_path(topic)
        %td.action= link_to t('destroy'), topic, :confirm => t('are_you_sure'), :method => :delete
