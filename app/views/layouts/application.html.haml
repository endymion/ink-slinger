%head
  %title= (title = yield(:title)).blank? ? @current_brand.title : title
  - if (STYLES_CHANGED_RECENTLY and Rails.env.eql? 'production')
    %link{:href=>"http://static.brave-new-media.com/stylesheets/screen.css", :media=>"screen, projection", :rel=>"stylesheet", :type=>"text/css"}
    %link{:href=>"http://static.brave-new-media.com/stylesheets/print.css", :media=>"print", :rel=>"stylesheet", :type=>"text/css"}
    %link{:href=>"http://static.brave-new-media.com/stylesheets/ie.css", :media=>"screen, projection", :rel=>"stylesheet", :type=>"text/css"}
  - else  
    = stylesheet_link_tag 'screen', :media => 'screen, projection'
    = stylesheet_link_tag 'print', :media => 'print'
    = stylesheet_link_tag 'ie', :media => 'screen, projection'
  = javascript_include_tag 'jquery', 'rails', 'application'
  = csrf_meta_tag
  %meta{ :name => "viewport", :content => "width: device-width, initial-scale = 1, maximum-scale = 1" }
%body
  #page
    #header
      - [:notice, :error, :message].each do |key| 
        - unless flash[key].blank? 
          %p{ :class => "flash flash_#{key}" }= flash[key]
    #content
      = yield
  %script{:type => "text/javascript",
    :src  => "#{brand_application_host}/home/personalize_page/personalize_page.js"}
  - unless @current_brand.google_analytics_code.blank?
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '#{ @current_brand.google_analytics_code }']);
      _gaq.push(['_setDomainName', 'none']);
      _gaq.push(['_setAllowLinker', true]);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();