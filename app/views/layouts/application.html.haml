%head
  %title= yield :title
  = stylesheet_link_tag :all
  = javascript_include_tag :defaults
  = csrf_meta_tag
%body
  #header
    - [:notice, :error, :message].each do |key| 
      - unless flash[key].blank? 
        %p{ :class => "flash flash_#{key}" }= flash[key]
    %h1= yield :title
  #content
    = yield :content
    = yield
  #footer
    = yield :footer